{
  "compilerOptions": {
    "target": "ES2017",
    "module": "esnext",
    "jsx": "react-native",
    "strict": true,
    "noEmit": true,
    "lib": [
      "dom",
      "es2017"
    ],
    "types": [
      "react",
      "react-native"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": [
    "**/*"
  ],
  "extends": "expo/tsconfig.base"
}
